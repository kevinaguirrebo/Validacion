    private void btnAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if (!txtNombre.getText().equals("")) 
        {
            DefaultTableModel modelo = (DefaultTableModel)tabla.getModel();
        
            String [] fila = new String[5];
            fila[0] = txtNombre.getText();
            fila[1] = txtApellidos.getText();
            fila[2] = txtCorreo.getText();
            fila[3] = txtTelefono.getText();
            fila[4] = txtDireccion.getText();
            
            modelo.addRow(fila);
            tabla.setModel(modelo);

            limpiar();
        }
    }                                          

    private void btnCerrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        dispose();
    }                                         

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        String dato = txtNombre.getText();
        DefaultTableModel modelo = (DefaultTableModel)tabla.getModel();

        
        for (int i = 0; i < modelo.getRowCount(); i++) {
            if (dato.equals(modelo.getValueAt(i, 0))) 
            {
                modelo.removeRow(i);
            }
        }
        tabla.setModel(modelo);
        limpiar();
    }                                           

    private void tablaMouseClicked(java.awt.event.MouseEvent evt) {                                   
        int fila = this.tabla.getSelectedRow();
        txtNombre.setText((String)this.tabla.getValueAt(fila, 0));
        txtApellidos.setText((String)this.tabla.getValueAt(fila, 1));
        txtCorreo.setText((String)this.tabla.getValueAt(fila, 2));
        txtTelefono.setText((String)this.tabla.getValueAt(fila, 2));
        txtDireccion.setText((String)this.tabla.getValueAt(fila, 2));
    }                                  

    public void limpiar()
    {
      txtNombre.setText("");
      txtApellidos.setText("");
      txtCorreo.setText("");
      txtTelefono.setText("");
      txtDireccion.setText("");
      txtNombre.requestFocus();
    }
    
